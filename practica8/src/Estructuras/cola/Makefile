# Compilador y banderas
CC = gcc
CFLAGS = -Wall -Werror -pedantic -std=c99 -O2

# Archivos fuente y objetos
SRC = cola.c nodo.c
OBJ = $(SRC:.c=.o)

# Ruta donde se guardar√° la librer√≠a
LIBDIR = ../../../lib
LIBNAME = libCola.a

# Regla principal: compila los .o y genera la librer√≠a est√°tica
build: $(OBJ)
	ar rcs $(LIBDIR)/$(LIBNAME) $(OBJ)
	@echo "‚úÖ Librer√≠a $(LIBNAME) creada correctamente en $(LIBDIR)"

# Compilaci√≥n de objetos
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Limpieza
clean:
	del *.o
	@echo "üßπ Objetos eliminados"

cleanlib:
	del $(LIBDIR)/$(LIBNAME)
	@echo "üßπ Librer√≠a eliminada"
