#Compilador y banderas
CC = gcc
CFLAGS = -Wall -Werror -pedantic -std=c99 -O2

# Directorios
INCLUDES = -I ../Estructuras/cola -I ../captura
LIBDIR = ../../lib

# LibrerÃ­as a enlazar
LIBS = -L $(LIBDIR) -lCola -lCaptura

# Archivos fuente y salida
SRC = $(wildcard *.c)
OUT = ../../bin/practica5

# Regla principal
build:
	$(CC) $(CFLAGS) $(SRC) -o $(OUT) $(INCLUDES) $(LIBS)
	@echo "âœ… CompilaciÃ³n exitosa de practica5!"

# Limpieza
clean:
	del *.o
	@echo "ðŸ§¹ Archivos objeto eliminados"